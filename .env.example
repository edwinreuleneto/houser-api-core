# Application
PORT=3000

# Firebase service account path
FIREBASE_CREDENTIAL_PATH=
# or provide credential JSON
FIREBASE_CREDENTIAL_JSON=
# or provide credentials directly
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Microsoft Graph
GRAPH_TENANT_ID=
GRAPH_CLIENT_ID=
GRAPH_CLIENT_SECRET=
# OpenAI / AI
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4o-mini

# Image generation controls
# Set to 'false' to skip generating a cover image
AI_IMAGE_ENABLED=false
# Optional: override image model and size (if enabled)
AI_IMAGE_MODEL=gpt-image-1
# Supported sizes: 1024x1024 | 1024x1536 | 1536x1024 | auto
AI_IMAGE_SIZE=1536x1024
# Use a tiny placeholder (1x1 PNG) when image generation is unavailable
AI_IMAGE_PLACEHOLDER=true
# Optional: custom placeholder URL (used if AI_IMAGE_PLACEHOLDER=true)
# Example: https://via.placeholder.com/1536x1024.png?text=Houser
AI_IMAGE_PLACEHOLDER_URL=

# Frontend blog base URL for social links
FRONT_BLOG_URL=https://houser.com/blog
